<odoo>
    <data>
        <record id="view_hr_employee_allergy_form" model="ir.ui.view">
            <field name="name">view.hr.employee.allergy.form</field>
            <field name="model">hr.employee.allergy</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group colspan="2">
                            <field name="name" string="Tipo de alergia" class="w-75"></field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_hr_employee_allergy_tree" model="ir.ui.view">
            <field name="name">view.hr.employee.allergy.tree</field>
            <field name="model">hr.employee.allergy</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="Tipo de alergia"></field>
                </tree>
            </field>
        </record>

        <record id="view_hr_employee_allergy_actions" model="ir.actions.act_window">
            <field name="name">Tipos de alergias</field>
            <field name="res_model">hr.employee.allergy</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="text-center h5">
                    Importa los tipos de alergias que deseas enlistar
                </p>
            </field>
        </record>

        <menuitem
        id="allergy_types_views"
        action="view_hr_employee_allergy_actions"
        parent="hr.menu_human_resources_configuration"
        groups="base.group_no_one"
        sequence="10"/>
    </data>
</odoo>