<odoo>
    <data>
        <record id="view_hr_supermarket_tree" model="ir.ui.view">
            <field name="name">view.hr.supermarket.tree</field>
            <field name="model">hr.supermarket</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"></field>
                    <field name="address"></field>
                    <field name="responsable"></field>  
                </tree>
            </field>
        </record>

        <record id="view_hr_supermarket_form" model="ir.ui.view">
            <field name="name">view.hr.supermarket.form</field>
            <field name="model">hr.supermarket</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group colspan="2">
                            <field name="name"></field>
                            <field name="address"></field>
                            <field name="responsable" class="w-25"></field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_hr_supermarket_actions" model="ir.actions.act_window">
            <field name="name">Supermercados</field>
            <field name="res_model">hr.supermarket</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="text-center h5">
                    Actualmente no tienes información de ningún supermercado.
                    Cree uno o impórtelos
                </p>
            </field>
        </record>

        <menuitem
        id="supermarket_views"
        action="view_hr_supermarket_actions"
        parent="hr.menu_hr_root"
        groups="base.group_no_one"
        sequence="5"/>
    </data>
</odoo>